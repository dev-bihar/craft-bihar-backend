{
  "info": {
    "name": "Craft Bihar Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Authentication endpoints for Craft Bihar backend"
  },
  "item": [
    {
      "name": "Test Auth Service",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/auth/test-phone",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["auth", "test-phone"]
        }
      }
    },
    {
      "name": "Start Phone Auth",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"phoneNumber\": \"{{phoneNumber}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/phone/start",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["auth", "phone", "start"]
        }
      }
    },
    {
      "name": "Verify OTP",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"verificationId\": \"{{verificationId}}\",\n    \"otp\": \"{{otp}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/auth/phone/verify",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["auth", "phone", "verify"]
        }
      }
    },
    {
      "name": "Get User Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/users/profile",
          "protocol": "http",
          "host": ["{{host}}"],
          "port": "{{port}}",
          "path": ["users", "profile"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "host",
      "value": "localhost",
      "type": "string"
    },
    {
      "key": "port",
      "value": "3001",
      "type": "string"
    },
    {
      "key": "phoneNumber",
      "value": "+919876543210",
      "type": "string"
    },
    {
      "key": "verificationId",
      "value": "your_verification_id_here",
      "type": "string"
    },
    {
      "key": "otp",
      "value": "123456",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your_auth_token_here",
      "type": "string"
    }
  ]
}
